{
    "base": {
        "js": {
            "description": "Source/target map of vendor JS assets to copy on build.",
            "value": [{
                "source": "path/to/vendor/file.js",
                "target": "file.js"
            }]
        },
        "css": {
            "description": "Array of vendor CSS files to prepend. All are written to base.css.",
            "value": [
                "path/to/vendor/file.css"
            ]
        },
        "img": {
            "description": "Source/target map of vendor image directory/file names to copy over.",
            "value": [{
                "source": "path/to/vendor/imgdir",
                "target": "dirname"
            }]
        },
        "fonts": {
            "description": "Array of fonts to copy when building base, relative to the vendor path",
            "value": [
                "path/to/vendor/font.eot",
                "path/to/vendor/font.svg",
                "path/to/vendor/font.ttf",
                "path/to/vendor/font.woff"
            ]
        },
        "browserify": {
            "requires": [
                "jquery",
                "bootstrap",
                "underscore"
            ],
            "excludes": [],
            "transforms": [],
            "options": []
        }
    },
    "modules": {
        "test": {
            "description": "Module used within this application.",
            "js": {},
            "css": {},
            "img": {},
            "fonts": {},
            "browserify": {
                "requires": [],
                "excludes": [],
                "transforms": [],
                "options": []
            }
        }
    }
}