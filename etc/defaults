# stem used for history polyfill
historyBasePath="/project"

# path for api calls
apiPath="http://api.mishra.local"

# path for app redirection
appPath="http://mishra.local"

# base path
basePath="http://mishra.local/project"

# path for assets
assetPath="http://mishra.local/project"

# using htaccess?
useHtaccess="no"

# using asset versioning?
useAssetVersion="no"

# array of modules
modules=(
    'home'
)

# browserify command options
browserifyBase=()
browserifyModule=()

# assets to copy on build
# this is a hash of vendor file => build file
declare -A buildBaseJs=()

# this is an array of css files to prepend 
buildBaseCss=()

# hash of image directory names and the vendor path
# these are relative to the vendor path
declare -A buildBaseImg=()

# array of fonts to copy when building base
# also relative to the vendor path
buildBaseFonts=()